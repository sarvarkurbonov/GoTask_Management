# GoTask Management Environment Configuration
# Copy this file to .env and modify the values as needed

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Server Configuration
PORT=8080
LOG_LEVEL=info
ENVIRONMENT=development

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================

# Storage Backend Type
# Options: json, sqlite, postgres, mysql, mongodb
STORAGE_TYPE=json

# File-based Storage (for json/sqlite)
STORAGE_FILE_PATH=tasks.json

# =============================================================================
# POSTGRESQL CONFIGURATION
# =============================================================================

# Connection Settings
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=gotask_user
POSTGRES_PASSWORD=gotask_password
POSTGRES_DB=gotask
POSTGRES_SSL_MODE=disable
POSTGRES_TIMEZONE=UTC

# Connection Pool Settings
POSTGRES_MAX_IDLE_CONNS=10
POSTGRES_MAX_OPEN_CONNS=100
POSTGRES_CONN_MAX_LIFETIME=1h

# =============================================================================
# MYSQL CONFIGURATION
# =============================================================================

# Connection Settings
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=gotask_user
MYSQL_PASSWORD=gotask_password
MYSQL_DB=gotask

# MySQL Specific Settings
MYSQL_CHARSET=utf8mb4
MYSQL_PARSE_TIME=true
MYSQL_LOC=Local

# Connection Pool Settings
MYSQL_MAX_IDLE_CONNS=10
MYSQL_MAX_OPEN_CONNS=100
MYSQL_CONN_MAX_LIFETIME=1h

# =============================================================================
# MONGODB CONFIGURATION
# =============================================================================

# Connection Settings
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB=gotask
MONGODB_COLLECTION=tasks

# Authentication (if required)
MONGODB_USERNAME=
MONGODB_PASSWORD=
MONGODB_AUTH_SOURCE=admin

# Timeout Settings
MONGODB_CONNECT_TIMEOUT=10s
MONGODB_QUERY_TIMEOUT=5s

# =============================================================================
# SCHEDULER CONFIGURATION
# =============================================================================

# Scheduler Settings
SCHEDULER_ENABLED=true
SCHEDULER_INTERVAL=300
SCHEDULER_CLEANUP_COMPLETED_TASKS=true
SCHEDULER_CLEANUP_AFTER_DAYS=30

# =============================================================================
# API CONFIGURATION
# =============================================================================

# CORS Settings
CORS_ENABLED=true
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization
CORS_MAX_AGE=86400

# Rate Limiting
RATE_LIMITING_ENABLED=false
RATE_LIMITING_REQUESTS_PER_MINUTE=100
RATE_LIMITING_BURST=10

# Request Settings
REQUEST_TIMEOUT=30s
MAX_REQUEST_SIZE=10MB

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Authentication (future feature)
AUTH_ENABLED=false
AUTH_TYPE=jwt
AUTH_SECRET=your-secret-key-here
AUTH_TOKEN_EXPIRY=24h

# TLS Settings (future feature)
TLS_ENABLED=false
TLS_CERT_FILE=
TLS_KEY_FILE=
TLS_AUTO_CERT=false

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

# Metrics
METRICS_ENABLED=true
METRICS_PATH=/metrics

# Health Check
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_DETAILED=true

# Profiling (development only)
PROFILING_ENABLED=false
PROFILING_PATH=/debug/pprof

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Feature Toggles
FEATURE_SWAGGER_UI=true
FEATURE_ADMIN_ENDPOINTS=false
FEATURE_BULK_OPERATIONS=true
FEATURE_TASK_TEMPLATES=false
FEATURE_NOTIFICATIONS=false
FEATURE_FILE_ATTACHMENTS=false

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Logging Settings
LOG_FORMAT=text
LOG_OUTPUT=stdout
LOG_FILE_PATH=logs/gotask.log
LOG_MAX_SIZE=100
LOG_MAX_BACKUPS=3
LOG_MAX_AGE=28
LOG_COMPRESS=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development Features
DEBUG=false
HOT_RELOAD=false
MOCK_DATA=false
SEED_DATABASE=false

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================

# Production Features
GRACEFUL_SHUTDOWN=true
PANIC_RECOVERY=true
REQUEST_LOGGING=true
ERROR_TRACKING=false
PERFORMANCE_MONITORING=false

# =============================================================================
# CACHE CONFIGURATION (future feature)
# =============================================================================

# Cache Settings
CACHE_ENABLED=false
CACHE_TYPE=memory
CACHE_TTL=5m
CACHE_MAX_SIZE=1000

# Redis Cache (if using redis)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# BACKUP CONFIGURATION (future feature)
# =============================================================================

# Backup Settings
BACKUP_ENABLED=false
BACKUP_INTERVAL=24h
BACKUP_RETENTION=7d
BACKUP_STORAGE_PATH=backups/
BACKUP_COMPRESSION=true

# =============================================================================
# INTEGRATION CONFIGURATION (future feature)
# =============================================================================

# Webhook Integration
WEBHOOK_ENABLED=false
WEBHOOK_URL=
WEBHOOK_EVENTS=task.created,task.updated,task.deleted

# Email Integration
EMAIL_ENABLED=false
EMAIL_SMTP_HOST=
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=
EMAIL_PASSWORD=
EMAIL_FROM_ADDRESS=

# Slack Integration
SLACK_ENABLED=false
SLACK_WEBHOOK_URL=
SLACK_CHANNEL=#tasks

# =============================================================================
# DOCKER COMPOSE OVERRIDES
# =============================================================================

# Database Passwords (for docker-compose)
POSTGRES_ROOT_PASSWORD=postgres_root_password
MYSQL_ROOT_PASSWORD=mysql_root_password
MONGODB_ROOT_PASSWORD=mongodb_root_password

# Admin Interface Passwords
PGADMIN_DEFAULT_EMAIL=admin@gotask.com
PGADMIN_DEFAULT_PASSWORD=admin_password
PHPMYADMIN_PASSWORD=admin_password
MONGO_EXPRESS_BASICAUTH_USERNAME=admin
MONGO_EXPRESS_BASICAUTH_PASSWORD=admin_password
